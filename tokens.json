{
  "name": "Boogieman Design System",
  "version": "1.1.0",
  "description": "A design system draft optimized for import into Figma Variables.",
  "variables": {
    "colors": {
      "mode": "light",
      "values": {
        "primary": {
          "green": "#4CAF50",
          "light-green": "#8BC34A",
          "dark-green": "#388E3C"
        },
        "secondary": {
          "yellow": "#FFC107",
          "pale-pink": "#FFCDD2"
        },
        "text": {
          "dark": "#212121",
          "light": "#FFFFFF",
          "muted": "#757575"
        },
        "background": {
          "default": "#F5F5F5",
          "card": "#FFFFFF",
          "dark": "#000000"
        }
      }
    },
    "spacing": {
      "mode": "default",
      "values": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px"
      }
    },
    "typography": {
      "mode": "default",
      "values": {
        "fontFamily": "Inter, sans-serif",
        "fontSize": {
          "h1": "2.5rem",
          "h2": "2rem",
          "h3": "1.75rem",
          "p": "1rem",
          "small": "0.875rem"
        },
        "lineHeight": "1.5"
      }
    }
  },
  "components_notes": {
    "buttons": {
      "borderRadius": "8px",
      "padding": "12px 24px",
      "fontSize": "typography.fontSize.p",
      "fontWeight": "600",
      "primary": {
        "backgroundColor": "variables.colors.primary.green",
        "color": "variables.colors.text.light",
        "hover": "background-color: variables.colors.primary.dark-green"
      },
      "secondary": {
        "backgroundColor": "variables.colors.secondary.yellow",
        "color": "variables.colors.text.dark",
        "hover": "background-color: variables.colors.secondary.yellow-dark"
      }
    },
    "cards": {
      "backgroundColor": "variables.colors.background.card",
      "borderRadius": "16px",
      "boxShadow": "0 4px 6px rgba(0, 0, 0, 0.1)"
    },
    "icons": {
      "style": "outlined",
      "color": "variables.colors.primary.dark-green",
      "strokeWidth": "2px",
      "size": "24px"
    }
  }
}
